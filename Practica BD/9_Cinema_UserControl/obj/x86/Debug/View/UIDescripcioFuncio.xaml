<UserControl x:ConnectionId='1'
    x:Class="_9_Cinema_UserControl.View.UIDescripcioFuncio"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_9_Cinema_UserControl.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    x:Name="UcDescripcioFuncio"
                                      >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Padding="5" Text="Espectacle: "></TextBlock>
        <TextBlock Grid.Row="1" Padding="5" Text="Lloc: "></TextBlock>
        <TextBlock Grid.Row="2" Padding="5" Text="Descripció: "></TextBlock>
        <TextBlock Grid.Row="3" Padding="5" Text="Data: "></TextBlock>
        <TextBlock Grid.Row="4" Padding="5" Text="Hora: "></TextBlock>
        <TextBlock Grid.Row="5" Padding="5" Text="Localitats: "></TextBlock>


        <TextBlock  Padding="5" Grid.Row="0" Grid.Column="1" Text="{Binding ElementName=UcDescripcioFuncio, Path=UnEspectacle.Esp_nom , Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        <TextBlock  Padding="5" Grid.Row="1" Grid.Column="1" Text="{Binding ElementName=UcDescripcioFuncio,Path=UnaSala.Nom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        <TextBlock  Padding="5" Grid.Row="2" Grid.Column="1" Text="{Binding ElementName=UcDescripcioFuncio, Path=UnEspectacle.Esp_desc , Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        <TextBlock  Padding="5" Grid.Row="3" Grid.Column="1" Text="{Binding ElementName=UcDescripcioFuncio, Path=UnaFuncio.Data, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        <TextBlock  Padding="5" Grid.Row="4" Grid.Column="1" Text="{Binding ElementName=UcDescripcioFuncio, Path=UnaFuncio.Data , Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        <TextBlock x:ConnectionId='2'  Padding="5" Grid.Row="5" Grid.Column="1" x:Name="txbLoc"></TextBlock>
    </Grid>
</UserControl>

